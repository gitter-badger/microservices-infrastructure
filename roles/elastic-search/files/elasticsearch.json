{
  "Name": "elasticsearch health check",
  "Notes": "For use with Microservice Infrastructure",
  "Checklist": [
    {
      "Name": "elasticsearch configuration directory",
      "Check": "directory",
      "Parameters": [
        "/home/elasticsearch"
      ]
    },
    {
      "Name": "elasticsearch configuration file",
      "Check": "file",
      "Parameters": [
        "/home/elasticsearch/config/elasticsearch.yml"
      ]
    },
    {
      "Name": "elasticsearch logging configuration file",
      "Check": "file",
      "Parameters": [
        "/home/elasticsearch/config/logging.yml"
      ]
    },
    {
      "Name": "Check admin port",
      "Check": "TCP",
      "Parameters": [
        "localhost:9300"
      ]
    },
    {
      "Name": "Check application port",
      "Check": "TCP",
      "Parameters": [
        "localhost:9200"
      ]
    }
  ]
}